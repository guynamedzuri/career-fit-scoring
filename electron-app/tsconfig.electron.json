{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM"],
    "declaration": false,
    "rootDir": "./electron",
    "outDir": "./electron",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noEmit": false
  },
  "include": ["electron/**/*.ts", "../src/**/*.ts"],
  "exclude": ["electron/electron-app/**", "node_modules", "dist"]
}
